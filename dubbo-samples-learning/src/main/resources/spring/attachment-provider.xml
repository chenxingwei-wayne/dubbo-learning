<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder/>

    <dubbo:application name="attachment-provider">
        <!--这几个参数是用来配置qos的。qos的默认端口是22222，可以用来进行在线运维。比如用ls查看当前服务是提供者还是消费者
        ，下线某个provider，但是不能下线consumer的服务，这个不允许。下线服务使用offline命令，上线服务使用online。-->
        <dubbo:parameter key="qos.enbale" value="true"/>
        <dubbo:parameter key="qos.accept.foreign.ip" value="false"/>
        <dubbo:parameter key="qos.port" value="33333"/>
    </dubbo:application>
    <dubbo:registry address="zookeeper://${zookeeper.address:127.0.0.1}:2181"/>

    <dubbo:protocol name="dubbo" port="20880"/>
    <bean id="attachment"
          class="org.apache.dubbo.dubbosamplesprovider.attachment.impl.AttachementServiceImpl"/>
    <dubbo:service interface="org.apache.dubbo.dubbosamplesprovider.attachment.api.AttachmentService"
                   ref="attachment"/>
</beans>